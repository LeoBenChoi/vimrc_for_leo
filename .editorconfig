# EditorConfig is awesome: https://editorconfig.org

# 这里是根文件
root = true

# 全局设置
[*]
charset = utf-8                     # 统一字符集
end_of_line = lf                    # 使用 unix 方式的换行
insert_final_newline = true         # 在文件末尾
trim_trailing_whitespace = true     # 删除行尾空格
indent_style = space                # 默认使用空格进行缩进
# indent_style = tab                  # 使用制表符缩进
# tab_width = 4                       # 每个Tab显示为4字符宽度

# a
# b
# c
[*.{css,scss}]
indent_size = 2
# d
# e
# f
# g
[*.go]
indent_style = tab   # Go 强制使用制表符（非空格）
tab_width = 8        # 制表符显示为8字符（Go官方标准）
indent_size = 8      # 缩进对齐到8字符（与tab_width一致）
# h
[*.html]
indent_size = 2
# i
# j
[*.{js,jsx}]
indent_size = 2
# k
